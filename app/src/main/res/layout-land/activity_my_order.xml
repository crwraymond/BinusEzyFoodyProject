<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/binus"
    tools:context=".MyOrder">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/myOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:text="Binus EzyFood: MyOrder"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonPay"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Pay Now"
            android:onClick="onClickPayNow"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/myOrder"
            android:textAllCaps="false"
            android:background="@color/white"
            android:backgroundTint="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonPay"
            android:textSize="10pt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Total : "
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/buttonPay"
            android:layout_toRightOf="@+id/tot"
            android:textSize="10pt"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/AirMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tot"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/AirMin"
            android:layout_below="@id/tot"
            android:text="Hapus"
            android:onClick="onClickDeleteAir"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/JusAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AirMin"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/JusAp"
            android:layout_below="@id/AirMin"
            android:text="Hapus"
            android:onClick="onClickDeleteJusAp"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/JusAl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/JusAp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/JusAl"
            android:layout_below="@id/JusAp"
            android:text="Hapus"
            android:onClick="onClickDeleteJusAl"
            android:layout_marginLeft="50dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/JusMg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/JusAl"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/JusMg"
            android:layout_below="@id/JusAl"
            android:text="Hapus"
            android:onClick="onClickDeleteJusMg"
            android:layout_marginLeft="50dp"
            android:visibility="gone"/>

    </RelativeLayout>



</ScrollView>