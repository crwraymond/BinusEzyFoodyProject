<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/binus"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/drinkfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:text="Binus EzyFood: TopUp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/saldotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/drinkfood"
            android:layout_marginTop="20dp"
            android:text="Saldo:        Rp."
            android:paddingLeft="30dp" />

        <TextView
            android:id="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/drinkfood"
            android:layout_toRightOf="@+id/saldotext"
            android:layout_marginTop="20dp"
            android:text=""
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/topup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/saldo"
            android:layout_marginTop="20dp"
            android:text="TopUp:       Rp."
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/totalJA"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_below="@+id/saldo"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/topup"
            android:width="150dp"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="false"
            android:layout_below="@id/topup"
            android:onClick="onClickTransfer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tf"
            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="false"
            android:layout_below="@id/topup"
            android:onClick="onClickMainMenu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tf"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Note: Maximum Balance Rp. 2.000.000"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </RelativeLayout>
</ScrollView>